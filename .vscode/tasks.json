{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "args": ["run"],
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "Build",
      "args": ["build"],
      "isBuildCommand": true
    },
    {
      "taskName": "Start",
      "args": ["start"],
      "isBackground": true
    },
    {
      "taskName": "Test",
      "args": ["test"],
      "isTestCommand": true,
      "isBackground": true
    }
  ]
}
